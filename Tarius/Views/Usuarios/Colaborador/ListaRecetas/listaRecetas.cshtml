@model IEnumerable<Tarius.Models.Colaborador.Receta>

@{
    ViewData["Title"] = "Recetas";
}

<h2 class="text-2xl font-bold mb-4">Recetas</h2>

<div class="mb-4">
    <a class="btn btn-primary" asp-controller="Recetas" asp-action="Crear">Crear nueva receta</a>
</div>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th>Nombre</th>
            <th>Descripción</th>
            <th>Tiempo (min)</th>
            <th>Calorías</th>
            <th>Tipo</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var receta in Model)
        {
            <tr>
                <td>@receta.Nombre</td>
                <td>@receta.Descripcion</td>
                <td>@receta.TiempoPreparacion</td>
                <td>@receta.Calorias</td>
                <td>@receta.Tipo</td>
                <td>
                    <a class="btn btn-info btn-sm" asp-controller="Recetas" asp-action="Detalle" asp-route-id="@receta.Id">Ver</a>
                    <a class="btn btn-warning btn-sm" asp-controller="Recetas" asp-action="Editar" asp-route-id="@receta.Id">Editar</a>
                    <a class="btn btn-danger btn-sm" asp-controller="Recetas" asp-action="Eliminar" asp-route-id="@receta.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>
