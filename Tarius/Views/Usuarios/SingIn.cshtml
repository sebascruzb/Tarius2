@model Tarius.Models.Usuarios

<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow p-4" style="max-width: 450px; width: 100%;">

        <!-- Logo -->
        <div class="text-center mb-3">
            <img src="~/resources/images/Logo.jpg" alt="Logo" class="img-fluid rounded-circle" style="max-width: 100px;">
        </div>

        <!-- Título -->
        <h3 class="text-center mb-4">Registrarse</h3>

        <!-- Verificación de errores -->
        @if (ViewBag.Message != null)
        {
            <div class="alert alert-danger text-center">@ViewBag.Message</div>
        }

        <!-- Formulario -->
        <form asp-action="SingIn" asp-controller="SingIn" method="post">

            <!-- Nombre de Usuario -->
            <div class="mb-3">
                <label asp-for="Nombre" class="form-label">Nombre de Usuario</label>
                <input asp-for="Nombre" class="form-control" placeholder="Ingresa tu nombre" />
                <span asp-validation-for="Nombre" class="text-danger small"></span>
            </div>

            <!-- Correo Electrónico -->
            <div class="mb-3">
                <label asp-for="Correo" class="form-label">Correo Electrónico</label>
                <input asp-for="Correo" class="form-control" placeholder="Ingresa tu correo electrónico" />
                <span asp-validation-for="Correo" class="text-danger small"></span>
            </div>

            <!-- Contraseña -->
            <div class="mb-4">
                <label asp-for="Contraseña" class="form-label">Contraseña</label>
                <input asp-for="Contraseña" type="password" class="form-control" placeholder="Crea una contraseña" />
                <span asp-validation-for="Contraseña" class="text-danger small"></span>
            </div>

            <!-- Botón de Registro -->
            <div class="d-grid">
                <button type="submit" class="btn btn-success">Registrarse</button>
            </div>
        </form>
    </div>
</div>
