@model List<Tarius.Models.Usuarios>

<div class="container py-5">
    <h2 class="text-center mb-4">Usuarios Registrados</h2>

    <div class="text-end mb-3">
        <a class="btn btn-primary" asp-action="Create">Crear Nuevo Usuario</a>
    </div>

    <div class="table-responsive">
        <table class="table table-bordered table-hover align-middle">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Correo</th>
                    <th>Rol</th>
                    <th class="text-center">Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var usuario in Model)
                {
                    <tr>
                        <td>@usuario.Nombre</td>
                        <td>@usuario.Correo</td>
                        <td>@usuario.Rol</td>
                        <td class="text-center">
                            <a class="btn btn-warning btn-sm me-1" asp-action="Edit" asp-route-id="@usuario.Id">Editar</a>
                            <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@usuario.Id">Eliminar</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
