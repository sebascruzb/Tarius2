@model Tarius.Models.Cliente.IngredienteCliente

@{
    ViewData["Title"] = "Eliminar Ingrediente";
}

<h2>¿Estás seguro de que deseas eliminar este ingrediente?</h2>

<div class="alert alert-warning">
    Esta acción no se puede deshacer.
</div>

<div class="form-group">
    <label>Nombre:</label>
    <input class="form-control" value="@Model.Nombre" disabled />
</div>

<div class="form-group">
    <label>Cantidad:</label>
    <input class="form-control" value="@Model.Cantidad" disabled />
</div>

<div class="form-group">
    <label>Unidad:</label>
    <input class="form-control" value="@Model.Unidad" disabled />
</div>

<form asp-action="Eliminar" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger mt-3">Sí, eliminar</button>
    <a asp-action="Ingredientes" class="btn btn-secondary mt-3">Cancelar</a>
</form>
