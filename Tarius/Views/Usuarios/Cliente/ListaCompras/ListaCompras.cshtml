@model IEnumerable<Tarius.Models.Cliente.ListaComprasCliente>

@{
    ViewData["Title"] = "Lista de Compras";
}

<h2 class="text-2xl font-bold mb-4">Mi Lista de Compras</h2>

@if (!Model.Any())
{
    <div class="alert alert-info">No tienes ingredientes pendientes en tu lista de compras.</div>
}
else
{
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Ingrediente</th>
                <th>Cantidad</th>
                <th>Unidad</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.NombreIngrediente</td>
                    <td>@item.Cantidad</td>
                    <td>@item.Unidad</td>
                </tr>
            }
        </tbody>
    </table>
}
